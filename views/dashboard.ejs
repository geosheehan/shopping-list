<h1><%= user ? `${user.userName}'s ` : ''%>Shopping Lists</h1>
<a href="/logout">Logout</a>
<a href="/list" class="btn-floating btn-large waves-effect waves-light red icon-before add"></a>

<div class="container">
   <div class="row">
      <% lists.forEach( list => { %>
         <div class="col s12 m6 l4 xl3">
            <div class="card small">
               <div class="card-content">
                  <span class="card-title"><%= list.name %></span>
                  <p><%= list.desc %></p>
                  <div class="card-action">
                     <a href="/list/<%= list._id %>">View</a>
                     <a href="/list/<%= list._id %>">Edit</a>
                  </div>
               </div>
            </div>
         </div>
      <% }); %>
   </div>
</div>
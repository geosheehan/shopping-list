<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Document</title>
   </head>
   <body>
      <%- include('./partials/header') -%>
      <% if(locals.messages.auth) { messages.auth.forEach( (error) => { %>
      <div class="alert alert-danger"><%= error.msg %></div>
      <% }); } %>

      <div class="container login-container">
         <div class="card">

         </div>
      </div>

      <form action="/login" method="POST">
         <%# Email #%>
         <label for="email">Email:</label>
         <input type="text" id="email" name="email" />
         <% if(locals.messages.email) { messages.email.forEach( (email) => { %>
         <div class="alert alert-danger"><%= email.error %></div>
         <% }); } %>

         <%# Password #%>
         <label for="password">Password:</label>
         <input type="password" id="password" name="password" />
         <% if(locals.messages.password) { messages.password.forEach( (password) => { %>
         <div class="alert alert-danger"><%= password.error %></div>
         <% }); } %>

         <%# Button #%>
         <input type="submit" value="Login" />
      </form>
   </body>
</html>
